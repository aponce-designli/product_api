{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": [
    "src/**/*.ts",      // Incluye todos los archivos de TypeScript en src
    "src/migrations/*.ts",   // Asegúrate de incluir específicamente la carpeta de migraciones
    "ormconfig.ts"      // Incluye el archivo de configuración en la raíz
  ],
  "exclude": [
    "node_modules"      // Asegúrate de excluir node_modules
  ]
}
